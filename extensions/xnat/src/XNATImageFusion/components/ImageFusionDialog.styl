.ImageFusionDialogContainer
  display: flex
  flex-direction: row
  justify-content: center
  align-items: center
  background: var(--ui-gray-darkest)
  color: var(--text-secondary-color)
  filter: drop-shadow(0 0 3px var(--ui-gray-darkest))
  border: none
  border-radius: 8px
  width: inherit
  overflow: hidden

  .ImageFusionDialog
    display: flex
    flex-direction: column
    padding: 1em

    .row
      margin: 5px 0
      display: flex
      flex-direction: row
      justify-content: space-between
      align-items: center
      //height: 20px

      &:first-of-type
        margin-top: 0
      &:last-of-type
        margin-bottom: 0

      .group
        display: flex
        flex-direction: row
        align-items: center
        margin-left: 10px

        &:first-of-type
          margin-left: 0

        .opacityValue
          display: inline-block
          width: 16px
          margin-right: 5px
          font-size: 12px

        svg
          margin-right: 5px
          user-select: none
          pointer-events: none

          &.visibility
            margin-right: 0
            pointer-events: auto
            cursor: pointer

  .verticalLine
    margin: 0 5px
    &:after
      content: ''
      border-right: 2px solid var(--ui-border-color)

  h5
    font-size: 14px
    font-weight: 500
    text-align: left
    margin: 0 0 10px 0
    color: var(--active-color)
    display: inline

  select
    background-color: transparent
    border: 1px solid var(--ui-border-color)
    border-radius: 5px
    padding: 0 0 0 0
    color: white
    outline: none
    width: 100%
    height: 22px
    max-width: 260px
    font-size: 13px

    option, optgroup
      background-color: var(--ui-gray)
      color: white
    optgroup
      color: var(--text-secondary-color)

  button
    border: 0
    border-radius: 4px
    width: 76px
    margin: 0 5px
    padding: 0 12px
    font-weight: normal
    background-color: #337ab7
    color: var(--text-primary-color)

    &:active, &.active, &:hover
      background-color: var(--active-color)

  svg
    user-select: none
    pointer-events: none

